<head>
    <link rel="stylesheet" href="home.css">
</head>
  
<body style='text-align: center'>

  <div class="header">
      <h1>Chitter.</h1>
  </div>
    
  <div class="topnav">
      <a href="/login">Log In</a>
    </div>

  <form action="/new" method="post">
    <input type="text" name="peep"   placeholder="Write a new peep...">
    <input type="submit" value="Post">
  </form>

  <%@peep.each do |peep|%>
    <%=peep.text%><br>
    <%=peep.date%> <%=peep.time%><br><br>
  <%end%>
</body>

